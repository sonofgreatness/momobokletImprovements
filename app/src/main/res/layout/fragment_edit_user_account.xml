<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.manageuser.EditUserAccountFragment">


    <ImageView
        android:id="@+id/custom_upicon"
        android:contentDescription="@string/navigate_back_icon"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow_black"
        android:layout_width="wrap_content"
        android:padding="24dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/editAccountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        app:layout_constraintTop_toBottomOf="@id/custom_upicon"
        android:textColor="@color/black"
        android:text="@string/edit_user_account"
        android:textAppearance="@style/TextAppearance.Shrine.Title"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_user_account_nested_scroll"
        app:layout_constraintTop_toBottomOf="@+id/editAccountTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <include
                android:id="@+id/update_name_card"
                layout="@layout/edit_user_detail_card1"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />

            <include
                android:id="@+id/update_status_card"
                layout="@layout/edit_user_detail_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>