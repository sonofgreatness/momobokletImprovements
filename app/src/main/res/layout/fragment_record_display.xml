<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recordingtransanctions.RecordDisplayFragment"
    android:id="@+id/parent_recordTransacts"
    android:background="@color/white">





    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        style="@style/Widget.Shrine.Toolbar2"

        android:id="@+id/app_bar_check"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        />
    </com.google.android.material.appbar.AppBarLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="64dp"
    android:orientation="vertical"
    android:id="@+id/check_linearlayout"

    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.05"
    android:gravity="center"
    android:text="Check TransactionData"
    style="@style/TextAppearance.Shrine.justText"
    android:id="@+id/title_check"/>

    <include
        android:id="@+id/name_check"
        layout="@layout/tablefields_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="0.12" />





    <include layout="@layout/tablefields_card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:id="@+id/pin_check"/>
    <include layout="@layout/tablefields_card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:id="@+id/phone_check"/>
    <include layout="@layout/tablefields_card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:id="@+id/amount_check"/>
    <include layout="@layout/tablefields_card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:id="@+id/type_check"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:id="@+id/check_signature_layout"
        android:background="@drawable/background_border2"
 android:orientation="horizontal"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_weight="0.3"
            android:text="Signature :" />

        <ImageView
             android:id="@+id/signature_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_weight="0.7"
            android:src="@drawable/ic_drawing2" />
    </LinearLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_margin="32dp"
            android:id="@+id/transactCheckBtn"
            style="@style/Widget.Shrine.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/ok" />


    </RelativeLayout>


</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
