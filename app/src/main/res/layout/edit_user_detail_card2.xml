<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:strokeColor="@color/teal_200"
    app:cardCornerRadius="5dp"
    app:strokeWidth="2dp"
    android:id="@+id/cardview"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/edit_user_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_control_status"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <RelativeLayout
            android:id="@+id/edit_user_detail_old_value_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edit_user_detail_old_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_status_explain"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>


        <RadioGroup
            android:orientation="horizontal"
            android:id ="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group_title">
            <RadioButton
                android:id="@+id/active_radio_btn"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                app:checkedIconTint="@color/muesli_green"
                android:textColor="@color/black"
                android:text="active"/>
            <RadioButton
                android:id="@+id/inactive_radio_btn"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:checkedIconTint="@color/DarkGray"
                android:layout_weight="0.3"
                android:textColor="@color/black"
                android:text="inactive"/>
        </RadioGroup>


        <RelativeLayout
            android:id ="@+id/edit_user_account_button_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_user_account_button"
                style="@style/Widget.Shrine.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/finish" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>



